@model IEnumerable<AlphaBookStore.Entities.Book>

@{
    ViewBag.Title = "Index";
}

@if (TempData.ContainsKey("Alert"))
{
    <div class="alert alert-success" style="margin-top:50px" role="alert">@TempData["Alert"]</div>
}
<p>
    <a href="Book/Create" class="btn btn-success">
        <span class="glyphicon glyphicon-plus">
        </span>
        Yeni Kitap EKle
    </a>
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a href="/Book/Edit/@item.Id" class="glyphicon glyphicon-pencil"></a>
                <a href="/Book/Delete/@item.Id" class="glyphicon glyphicon-remove" style="left:15px"></a>
            </td>
        </tr>
    }

</table>
